
<%- include("partials/header"); -%>
  <div class="home-message">
    <h1 class = "home">Home</h1>
    <p> Welcome to my message board! I created this website using Node.js, MongoDB, Express.js, CSS, and Bootstrap. If you like this project let me know about it by clicking <a href="/contact">here</a></p>
  </div>

  <%  posts.forEach(function(post){ %>

    <div class="post">
      <h1><%=post.title%></h1>
      <p>
      <%=post.content.substring(0, 100) + " ..."%>
      <a href="/posts/<%=post._id%>">Read More</a>
      </p>
    </div>

    <% }) %>
    <p id="compose"><a class="compose-link btn btn-primary" href="/compose">COMPOSE MESSAGE</a></p>


<%- include("partials/footer"); -%>
